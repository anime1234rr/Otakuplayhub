---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import Otakuplayhub from "../assets/Otakuplayhub.jpg";
---

<Layout title="Mi Perfil - OtakuPlayhub">
  <main class="min-h-screen bg-[#1e2532] py-8">
    <div class="container mx-auto px-4 max-w-4xl">
      <!-- Header del perfil -->
      <div class="bg-slate-800/40 backdrop-blur-sm border border-slate-700/50 rounded-lg p-6 mb-6">
        <div class="flex items-center gap-6">
          <img 
            src={Otakuplayhub.src || "/placeholder.svg"} 
            class="w-24 h-24 rounded-full border-4 border-blue-500" 
            alt="Avatar de DORY~" 
          />
          <div class="flex-1">
            <h1 class="text-3xl font-bold text-white mb-2">Otakuplayhub</h1>
            <p class="text-blue-200 mb-2">Sin resgistrar</p>
            <div class="flex items-center gap-4 text-sm text-gray-300">
              <span>🎖️ 0 puntos</span>
              <span>📝 0 posts</span>
              <span>💬 0 comentarios</span>
              <span>❤️ 0 favoritos</span>
            </div>
          </div>
          <button class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors">
            Editar Perfil
          </button>
        </div>
      </div>

      <!-- Estadísticas -->
      <div class="grid md:grid-cols-3 gap-6 mb-6">
        <div class="bg-slate-800/40 backdrop-blur-sm border border-slate-700/50 rounded-lg p-4 text-center">
          <div class="text-2xl font-bold text-blue-400">0</div>
          <div class="text-gray-300">Animes Vistos</div>
        </div>
        <div class="bg-slate-800/40 backdrop-blur-sm border border-slate-700/50 rounded-lg p-4 text-center">
          <div class="text-2xl font-bold text-purple-400">0</div>
          <div class="text-gray-300">Mangas Leídos</div>
        </div>
        <div class="bg-slate-800/40 backdrop-blur-sm border border-slate-700/50 rounded-lg p-4 text-center">
          <div class="text-2xl font-bold text-green-400">0</div>
          <div class="text-gray-300">Logros Desbloqueados</div>
        </div>
      </div>

      <!-- Actividad reciente -->
      <div class="bg-slate-800/40 backdrop-blur-sm border border-slate-700/50 rounded-lg p-6">
        <h2 class="text-xl font-bold text-white mb-4">Actividad Reciente</h2>
        <div class="space-y-4">
          <div class="flex items-center gap-3 p-3 bg-slate-700/30 rounded-lg">
            <span class="text-blue-400">💬</span>
            <div>
              <p class="text-white">Comentó en "Sin resgistrar"</p>
              <p class="text-gray-400 text-sm">Hace 0 horas</p>
            </div>
          </div>
      
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
