// no se que que iba a hacer con esto, pero lo dejo por si acaso
const upcomingUpdates = [
  {
    title: "Implementación de un sistema de comentarios",
    description: "Pronto podrás comentar y discutir sobre tus animes y mangas favoritos con otros usuarios.",
  },
  {
    title: "Sistema de notificaciones",
    description: "Implementaremos un sistema de notificaciones para mantenerte informado sobre actualizaciones y novedades.",
  },
  {
    title: "Mejoras en la sección de eventos",
    description: "Estamos trabajando en una sección de eventos más interactiva y con más funcionalidades.",
  },
  {
    title: "Sistema de recompensas mejorado",
    description: "Estamos mejorando nuestro sistema de recompensas para que puedas obtener más beneficios por tu participación.",
  },
  {
    title: "Mejoras en la búsqueda",
    description: "Implementaremos un sistema de búsqueda avanzada para encontrar contenido más fácilmente.",
  },
  {
    title: "Sistema de perfiles de usuario personalizables",
    description: "Estamos trabajando en un sistema para que puedas resgistrar y personalizar tus preferencias en la plataforma, de OtakuPlayhub en cualquier lugar.",
  }
];
---

<Layout title="Actualizaciones | OtakuPlayhub">
  <main class="min-h-screen bg-gradient-to-b from-gray-900 to-gray-950">
    <!--por favor no me borres esto, es la seccion de noticias que estoy haciendo para mi web, gracias-->
    <!-- Hero Section -->
    <section class="relative py-16 bg-gray-800">
      <div class="absolute inset-0 bg-blue-600/10 mix-blend-multiply"></div>
      <div class="container mx-auto px-4 relative z-10">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
            <span class="text-blue-500">
              Actualizaciones de OtakuPlayhub
            </span>
          </h1>
          <p class="text-xl text-gray-200 max-w-3xl mx-auto">
            Mantente al día con los últimos cambios, mejoras y nuevas funcionalidades 
            que estamos implementando en la plataforma.
          </p>
        </div>
      </div>
    </section>

<!-- no se esto, deberia hacerce con una lista de actualizaciones, pero no se como hacerlo, por eso lo hago así -->
<section class="py-12">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-white mb-8">Últimas actualizaciones</h2>
   <div class="space-y-12">
  {
    siteUpdates.map(update => {
      return (
        <div class="bg-gray-800 rounded-lg shadow-lg p-6 border border-gray-700">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
            <div>
              <h3 class="text-2xl font-bold text-white">{update.title}</h3>
              <span class="text-gray-400 text-sm">{update.date} &middot; {update.version}</span>
            </div>
          </div>
          <p class="text-gray-300 mb-4">{update.description}</p>
          <div class="space-y-2">
            {
              update.changes.map(change => {
                let icon = null;
                if (change.type === 'new') {
                  icon = (
                    <span class="flex-shrink-0 w-5 h-5 mt-0.5 rounded-full bg-green-500/20 text-green-400 dark:bg-green-600/20 dark:text-green-300 flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                      </svg>
                    </span>
                  );
                } else if (change.type === 'added') {
                  icon = (
                    <span class="flex-shrink-0 w-5 h-5 mt-0.5 rounded-full bg-green-500/20 text-green-400 dark:bg-green-600/20 dark:text-green-300 flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                      </svg>
                    </span>
                  );
                } else if (change.type === 'improved') {
                  icon = (
                    <span class="flex-shrink-0 w-5 h-5 mt-0.5 rounded-full bg-blue-500/20 text-blue-400 dark:bg-blue-600/20 dark:text-blue-300 flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                      </svg>
                    </span>
                  );
                } else if (change.type === 'fixed') {
                  icon = (
                    <span class="flex-shrink-0 w-5 h-5 mt-0.5 rounded-full bg-amber-500/20 text-amber-400 dark:bg-amber-600/20 dark:text-amber-300 flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                      </svg>
                    </span>
                  );
                } else if (change.type === 'removed') {
                  icon = (
                    <span class="flex-shrink-0 w-5 h-5 mt-0.5 rounded-full bg-red-500/20 text-red-400 dark:bg-red-600/20 dark:text-red-300 flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    </span>
                  );
} else if (change.type === 'planned') {
  icon = (
    <span class="flex-shrink-0 w-5 h-5 mt-0.5 rounded-full bg-purple-500/20 text-purple-400 dark:bg-purple-600/20 dark:text-purple-300 flex items-center justify-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    </span>
  );
} else if (change.type === 'in-progress') {
  icon = (
    <span class="flex-shrink-0 w-5 h-5 mt-0.5 rounded-full bg-yellow-500/20 text-yellow-400 dark:bg-yellow-600/20 dark:text-yellow-300 flex items-center justify-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 animate-spin" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v4m0 8v4m8-8h-4M4 12H0m16.24 4.24l-2.83-2.83m-6.82 0L4.24 16.24m0-8.48l2.83 2.83m6.82 0l2.83-2.83" />
      </svg>
    </span>
  );
}
                return (
                  <div class="flex items-start gap-3">
                    {icon}
                    <span class="text-gray-300">{change.text}</span>
                  </div>
                );
              })
            }
          </div>
        </div>
      );
    })
  }
</div>
    </div>
</div>

  </div>

    <!-- no se si el botón de "enviar sugerencia" funciona aun, pero lo dejo por si acaso. -->
        <div class="mt-10 text-center">
          
            <a 
              href="/Ver_Actualizaciones" 
              class="inline-block bg-blue-600 hover:bg-blue-700 text-white py-2 px-6 rounded-lg transition-colors duration-300">
              Ver más Actualizaciones
            </a>
        </div>
</section>



    <!-- Próximas actualizaciones -->
    <section class="py-12 bg-gray-900">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-white mb-8">Próximamente</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {upcomingUpdates.map(update => (
            <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden border border-gray-700 hover:border-blue-500/50 transition-colors duration-300">
              <div class="p-6">
                <div class="flex justify-between items-start mb-4">
                  <h3 class="text-xl font-bold text-white">{update.title}</h3>
                  <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-600/20 text-blue-400">
                    Próximamente
                  </span>
                </div>
                <p class="text-gray-300">{update.description}</p>
              </div>
            </div>
          ))}
        </div>
        
        <!-- no se si el botón de "enviar sugerencia" funciona aun, pero lo dejo por si acaso. -->
        <div class="mt-10 text-center">
          <div class="inline-block bg-gray-800 rounded-lg p-6 max-w-2xl">
            <h3 class="text-xl font-bold text-white mb-3">¿Tienes alguna sugerencia?</h3>
            <p class="text-gray-300 mb-4">
              Nos encantaría escuchar tus ideas para mejorar OtakuPlayhub. 
              Comparte tus sugerencias y ayúdanos a crear la mejor plataforma para la comunidad.
            </p>
            <a 
              href="/contacto" 
              class="inline-block bg-blue-600 hover:bg-blue-700 text-white py-2 px-6 rounded-lg transition-colors duration-300">
              Enviar sugerencia
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- no se porque hice esta sección, debi borralo, pero no lo borre, porque no se si es necesario. -->
    <!-- Preguntas frecuentes -->
    <section class="py-12">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-white mb-8">Preguntas Frecuentes</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
          <div class="bg-gray-800 rounded-lg p-6">
            <h3 class="text-xl font-bold text-white mb-3">¿Con qué frecuencia se actualiza OtakuPlayhub?</h3>
            <p class="text-gray-300">
              Lanzamos actualizaciones importantes aproximadamente 1 o 3 veces al mes, 
              con correcciones menores y mejoras que se implementan semanalmente.
            </p>
          </div>
          
          <div class="bg-gray-800 rounded-lg p-6">
            <h3 class="text-xl font-bold text-white mb-3">¿Cómo puedo reportar un error?</h3>
            <p class="text-gray-300">
              Puedes reportar errores a través de nuestro 
              <a href="/contacto" class="text-blue-400 hover:text-blue-300">formulario de contacto</a> 
              o directamente en nuestro <a href="/foro" class="text-blue-400 hover:text-blue-300">foro de soporte</a>.
            </p>
          </div>
          
          <div class="bg-gray-800 rounded-lg p-6">
            <h3 class="text-xl font-bold text-white mb-3">¿Las actualizaciones afectan mis datos?</h3>
            <p class="text-gray-300">
              No, tus datos personales, comentarios y contenido guardado permanecen 
              intactos durante las actualizaciones del sitio.
            </p>
          </div>
          
          <div class="bg-gray-800 rounded-lg p-6">
            <h3 class="text-xl font-bold text-white mb-3">¿Puedo probar nuevas funciones antes de su lanzamiento?</h3>
            <p class="text-gray-300">
              Sí, ocasionalmente invitamos a usuarios a probar nuevas funciones en fase beta. 
              Mantente atento a las invitaciones o únete a nuestro 
              <a href="" class="text-blue-400 hover:text-blue-300">programa de pruebas</a>.
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
