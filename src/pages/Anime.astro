// Datos de ejemplo para temporadas
const seasons = [
  { id: 1, name: 'Invierno 2024', image: Ñ.src || "/placeholder.svg?height=500&width=1200", },
  { id: 2, name: 'Otoño 2024', image: U.src || "/placeholder.svg?height=500&width=1200", },
  { id: 3, name: 'Verano 2024',  image: F.src || "/placeholder.svg?height=500&width=1200",},
  { id: 4, name: 'Primavera 2024', image: F.src || "/placeholder.svg?height=500&width=1200", }
