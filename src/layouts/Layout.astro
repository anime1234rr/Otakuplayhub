    // Extiende la interfaz Window para TypeScript
    declare global {
      interface Window {
        closeDropdown?: () => void;
      }
    }

    // Añadir declaración global para TypeScript
    /** @type {any} */
    window;

    /** @type {Window & typeof globalThis & { closeDropdown?: () => void }} */
    const win = window;

    document.addEventListener('DOMContentLoaded', function() {
      // Toggle para el menú móvil
      const menuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      
      if (menuButton && mobileMenu) {
        menuButton.addEventListener('click', function() {
          mobileMenu.classList.toggle('hidden');
        });
      }

      // Dropdown del perfil de usuario
      const profileButton = document.getElementById('user-profile-button');
      const profileMenu = document.getElementById('user-profile-menu');
      const dropdownArrow = document.getElementById('dropdown-arrow');
      
      if (profileButton && profileMenu) {

        profileButton.addEventListener('click', function(e) {
          e.stopPropagation();
          toggleDropdown();
        });


        document.addEventListener('click', function(e) {
          const dropdown = document.getElementById('user-profile-dropdown');
          if (dropdown && !dropdown.contains(e.target as Node)) {
            closeDropdown();
          }
        });


        document.addEventListener('keydown', function(e) {
          if (e.key === 'Escape') {
            closeDropdown();
          }
        });

        function toggleDropdown() {
          if (!profileMenu) return;
          const isVisible = !profileMenu.classList.contains('opacity-0');
          
          if (isVisible) {
            closeDropdown();
          } else {
            openDropdown();
          }
        }

        function openDropdown() {
          if (!profileMenu) return;
          profileMenu.classList.remove('opacity-0', 'invisible', 'scale-95');
          profileMenu.classList.add('opacity-100', 'visible', 'scale-100');
        }

        function closeDropdown() {
          if (!profileMenu) return;
          profileMenu.classList.add('opacity-0', 'invisible', 'scale-95');
          profileMenu.classList.remove('opacity-100', 'visible', 'scale-100');
        }

        window.closeDropdown = closeDropdown;
      }
    });


    function logout() {
      if (confirm('¿Estás seguro de que quieres cerrar sesión?')) {

        alert('Cerrando sesión...');

      }
    }

    function changeAvatar() {
      const avatars = [
        '/placeholder.svg?height=100&width=100&text=🎌',
        '/placeholder.svg?height=100&width=100&text=🎮',
        '/placeholder.svg?height=100&width=100&text=⚡',
        '/placeholder.svg?height=100&width=100&text=🔥',
        '/placeholder.svg?height=100&width=100&text=💫'
      ];
      
      const randomAvatar = avatars[Math.floor(Math.random() * avatars.length)];
      const avatarElements = document.querySelectorAll('img[alt*="usuario"], img[alt*="Avatar"]');
      
      avatarElements.forEach(img => {
        (img as HTMLImageElement).src = randomAvatar;
      });
      
      // Mostrar notificación
      showNotification('¡Avatar actualizado!', 'success');
      
      // Cerrar dropdown
      if (typeof window.closeDropdown === 'function') {
        window.closeDropdown();
      }
    }

    // Función para mostrar notificaciones
    /**
     * Muestra una notificación en pantalla.
     * @param {string} message - El mensaje a mostrar.
     * @param {string} [type='info'] - El tipo de notificación ('success', 'error', 'info').
     */
    function showNotification(message: string, type: string = 'info') {
      const notification = document.createElement('div');
      notification.className = `fixed top-4 right-4 p-4 rounded-lg text-white z-50 transition-all duration-300 ${
        type === 'success' ? 'bg-green-500' : 
        type === 'error' ? 'bg-red-500' : 
        'bg-blue-500'
      }`;
      notification.textContent = message;
      
      document.body.appendChild(notification);
      
      setTimeout(() => {
        notification.style.opacity = '0';
        setTimeout(() => {
          if (document.body.contains(notification)) {
            document.body.removeChild(notification);
          }
        }, 300);
      }, 3000);
    }
  </script>
